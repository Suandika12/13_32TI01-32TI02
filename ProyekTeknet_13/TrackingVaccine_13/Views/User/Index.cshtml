
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";

}


<!-- banner section -->
<section id="home" class="w3l-banner py-5">
    <div class="">

    </div>

    <div class="banner-content">
        <div class="container pt-5 pb-md-4">
            <div class="row align-items-right">
                <div class="col-md-6 pt-md-0 pt-4">
                    <h3 class="mb-lg-4 mb-3 title"><span class="typed-text"></span><span>Selamat Datang Ke Vaksin Tracking 13</span></h3>
                    <p>
                        Vaccine Tracking merupakan website yang memfasilitasi masyarakat , produsen, pemerintah, bopm
                        maupun rumahsakit dalam melakukan validasi penyebaran vaksin kepada masyarakat.
                    </p>
                    @if (User.IsInRole("Masyarakat"))
                    {
                        <div class="mt-md-5 mt-4 mb-lg-0 mb-4">
                            @Html.ActionLink("Cek Vaksin", "Vaksin", null, new { @class = "btn btn-primary", style = "background-color: #008080;" })
                        </div>}
                    @if (User.IsInRole("Produsen"))
                    {
                        <div class="mt-md-5 mt-4 mb-lg-0 mb-4">
                            @Html.ActionLink("Kelola Vaksin", "Vaksin", null, new { @class = "btn btn-primary" })
                        </div>}
                    @if (User.IsInRole("RumahSakit"))
                    {
                        <div class="mt-md-2 mt-4 mb-lg-0 mb-4">
                            @Html.ActionLink("Konfirmasi", "Konfirmasi", null, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Cek Vaksin", "Vaksin", null, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Cek NIK", "NIK", null, new { @class = "btn btn-primary" })
                        </div>
                    }
                    @if (User.IsInRole("BPOM"))
                    {
                        <div class="mt-md-5 mt-4 mb-lg-0 mb-4">
                            @Html.ActionLink("Telusuri Vaksin", "Vaksin", null, new { @class = "btn btn-primary" })
                        </div>
                    }
                </div>

                <div class="col-md-6 mt-md-0 mt-4">
                    <img class="img-fluid" src="~/images/img1.jpg" alt=" ">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //banner section -->
